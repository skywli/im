<!-- msg configuration type is a important parameter,the value must be one of(monitor,login,conn,dispatch,msg,loadbalance,broadcast)-->
<buddy  type="buddy">
	 <!-- IP/port the monitor is waiting for connections on -->
	<monitor_ip>127.0.0.1</monitor_ip>
	<monitor_port>8802</monitor_port>
	<redis_ip>127.0.0.1</redis_ip>
	<redis_port>6379</redis_port>
    <!-- use as msg queue  for storaging im msg-->
    <msg_queue_ip>127.0.0.1</msg_queue_ip>
    <msg_queue_port>6379</msg_queue_port>
    <msg_queue_auth>123456</msg_queue_auth>
	
    <!--	<dbproxy_ip>192.168.0.66</dbproxy_ip>-->
	<dbproxy_port>8890</dbproxy_port>
    <redis_auth>123456</redis_auth>
	  <!-- IP and port to listen for incoming msg connections on -->
	<ip>127.0.0.1</ip>
	<port>8060</port>
	<!-- msg will connect service -->
	<conn_type>
		<type>monitor</type>
		<type>dispatch</type>
		<type>msg</type>
		<type>conn</type>
	</conn_type>
	<!-- msg whether runing on backgroud ,the value is off/on -->
	<daemon>on</daemon>
		<!-- specify log level 
	This should be one of
	debug:1
	trace:2
	info:3
	warn:4
	error:5
	//default debug
	-->
	<loglevel>1</loglevel>  

</buddy>
	
